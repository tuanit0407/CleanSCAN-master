<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OCRActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ocrText"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="496dp"
            android:ems="10"
            android:text="@string/ocr_waiting_text"
            android:gravity="top"
            android:padding="20dp"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ProgressBar
            android:id="@+id/extractingProgress"
            style="?android:attr/progressBarStyle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/shareBtn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_bottom_button"
            android:background="@drawable/capsule_bg"
            android:drawableStart="@drawable/ic_menu_share"
            android:orientation="horizontal"
            android:padding="@dimen/bottom_bar_padding"
            android:text="Share"
            android:textColor="@android:color/white"></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>